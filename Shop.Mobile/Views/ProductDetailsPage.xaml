<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Shop.Mobile.Views.ProductDetailsPage"
             Title="Szczegóły">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <Label Text="{Binding Product.Name}" 
                   FontSize="24" 
                   FontAttributes="Bold" 
                   HorizontalOptions="Center"/>

            <Label Text="{Binding Product.Category}" 
                   FontSize="14" 
                   TextColor="Gray"
                   HorizontalOptions="Center"/>

            <Label Text="{Binding Product.Price, StringFormat='Cena: {0:C}'}" 
                   FontSize="20" 
                   TextColor="Green"
                   HorizontalOptions="Center"/>

            <BoxView HeightRequest="1" Color="LightGray"/>

            <HorizontalStackLayout Spacing="10" HorizontalOptions="Center">
                <Label Text="Dostępna ilość:" FontAttributes="Bold"/>
                <Label Text="{Binding Product.Quantity}" />
            </HorizontalStackLayout>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>